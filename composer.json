{
    "name": "phpresilience/ci-guard",
    "description": "Detect resilience anti-patterns in your PHP code before they cause production incidents.",
    "type": "library",
    "require": {
        "php": ">=8.2",
        "nikic/php-parser": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phpresilience\\CiGuard\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Nicolas Perussel",
            "email": "nicolas.perussel@gmail.com"
        }
    ],
    "bin": [
      "bin/ci-guard"
    ],
    "scripts": {
      "lint": "php-cs-fixer fix --dry-run --config .linter/PhpCsFixerConfig.php",
      "lint-fix": "php-cs-fixer fix --config .linter/PhpCsFixerConfig.php",
      "test": "phpunit",
      "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage",
      "test:unit": "phpunit tests/Unit",
      "test:integration": "phpunit tests/Integration",
      "stan": "phpstan analyse --memory-limit=1G",
      "stan-baseline": "phpstan analyse --generate-baseline",
      "quality": [
        "@lint",
        "@stan",
        "@test"
      ]
    }
}
